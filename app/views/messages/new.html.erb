
<div class="content">
  <section class="page-header">
    <h1 class="title-text">
      Send a New Message:
    </h1>
    <i class="tagline">
      be social... you can do it!
    </i>
  </section>

  <section class="main-content">
    <ul class="info-vertical">



    <form class= 'new-message-form' action="<%= messages_url %>" method="post">
    <%= auth_token %>
    <input type="hidden"
    name="message[sender_id]"
    value="<%=current_user.id %>">

    <li>
      <label for="message-to">To:</label>
      <input type="text"
      name="receiver_name"
      value="<%=@receiver.username%>"
      id="message-to">
    </li>
    <li>
      <label for="message-title">Title:</label>
      <input type="text"
      name="message[title]"
      value="<%=@message.title %>"
      id="message-title">
    </li>
    <li>
      <label for="message-body">Body:</label>
      <textarea name="message[body]"
      value="<%=@message.body %>"
      id="message-body"></textarea>
      <!-- <input type="text"
      name="message[body]"
      value="<%=@message.body %>"
      id="message-body"> -->
    </li>
      <p><input class="button" type="submit" value="Send Message"></p>
    </form>


 </ul>
  </section>
</div>

