<h1>New Message</h1>
<form class= 'new-message-form' action="<%= messages_url %>" method="post">
<%= auth_token %>
<label for="message-to">To:</label>
<input type="text"
name="receiver_name"
value="<%=@receiver.username%>"
id="message-to">

<input type="hidden"
name="message[sender_id]"
value="<%=current_user.id %>">

<label for="message-title">Title:</label>
<input type="text"
name="message[title]"
value="<%=@message.title %>"
id="message-title">

<label for="message-body">Body:</label>
<input type="text"
name="message[body]"
value="<%=@message.body %>"
id="message-body">

  <p><input type="submit" value="Send Message"></p>
</form>