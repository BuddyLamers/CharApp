<section class="content">
  <div class="page-header">
    <h1 class="title-text">
      Notifications (<%= current_user.notifications.size %>)
    </h1>
  </div>


  <div class="main-content">
    <ul>
      <%= render partial: "notifications/notification", collection: current_user.notifications.unread %>
    </ul>
    <ul>
      <%= render partial: "notifications/notification", collection: current_user.notifications.read %>
    </ul>
  </div>


</section>
