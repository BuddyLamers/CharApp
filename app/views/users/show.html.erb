<header class="page-header">
<% if @user != current_user %>
<h1 class="title-text">
  <a href="<%= user_url(@user)%>">
    <%= @user.username %>'s
  </a> Characters
</h1>
<% else %>
<h1 class="title-text"><%="Your characters"%></h1>
<% end %>
</header>

<div class="content">
<section class="sidebar">
  <ul class="sidebar-box">
     <%= title_link_count_li(
   "All Characters", '#', @user.characters_count) %>
     <%= title_link_count_li(
   "Forked", '#', @user.forked_characters.count) %>
     <%= title_link_count_li(
   "Starred", '#', @user.starred_characters.count) %>



      <%= title_link_count_li(
    "Public", '#', @user.public_characters.count) %>
      <%= title_link_count_li(
    "Private", '#', @user.private_characters.count) %>

    <li>
      <a href="<%= new_character_url %>">New Character</a>
    </li>
  </ul>
</section>

<main class='main-content'>
  <% if !@user.characters.nil? %>
  <ul class="main-content-list">
    <% @user.characters.each do |char| %>

    <li>
      <header class="item-header group">
          <ul class="info-vertical">
            <li>
              <a href="<%= user_url(@user) %>">
              <%= @user.username %>
              </a>
                /
              <a href="<%=character_url(char) %>">
                <%= char.name %>
              </a>
            </li>

            <li>
              <small>Last active <%=time_ago_in_words(char.updated_at) %> ago
              </small>

              <% if char.is_fork_duplicate? %>
              <small>Forked from

                <a href='<%= user_url(char.original_creator) %>'>
                <%= char.original_creator.username %>
                </a>
              </small>
              <% end %>
            </li>

            <li>
              <i>
                <%= "#{char.tagline}" %>
              </i>
            </li>

          </ul>



          <ul class="social">
             <%= title_link_count_li(
           "Details", '#', char.details_count) %>
             <%= title_link_count_li(
           "Forks", '#', char.duplicate_forks.count) %>
             <%= title_link_count_li(
           "Comments", '#', char.comments_count) %>
              <%= title_link_count_li(
           "Stars", '#', char.stars_count) %>
          </ul>

      </header>


      <div class="item-body-text">
        <% if !char.details.empty? %>
        <% detail = char.details.first.body[0..200] %>
        <%= detail %> <%= "..." if detail.length > 200 %>
        <% end %>
      </div>


    </li>
    <% end %>
  </ul>
  <% end %>
</main>
</div>