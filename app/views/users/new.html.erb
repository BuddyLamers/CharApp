    </form>

  </section>

  <section class="main-content">


      <form action="<%= users_url %>" method="post">
      <%= auth_token %>
        <ul class="info-vertical">
          <li>
            <label>Email
              <input type="text" name="user[email]">
            </label>
          </li>
          <li>
            <label>Username
              <input type="text" name="user[username]" value="<%= @user.username %>" >
              </label>
          </li>
          <li>
