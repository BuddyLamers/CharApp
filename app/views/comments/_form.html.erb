<section class='comment-form'>

<form action="<%= character_comments_url(@character) %>"
  method="post">
  <%= auth_token %>

  <label for="comment-body">Write a Comment</label>
  <input type="text" name="comment[body]" id="comment-text">

  <input type="hidden"
  name="comment[author_id]"
  value="<%= current_user.id %>">

  <input type="hidden"
  name="comment[character_id]"
  value="<%= @character.id %>">

  <p><input type="submit" value="Add Comment"></p>
</form>

</section>