<article class='comment'>
  <div>
    <a href="<%= user_url(comment.author) %>">
      <%= comment.author.username %>
    </a>
    <p><%= comment.body %></p>
  </div>

  <ul class='bar-right'>
    <li><%= comment.created_at %></li>
    <% if comment.author == current_user %>
    <li>edit</li>
    <li><%= button_to "Delete",
      user_character_comment_url(comment.author,
                                 comment.character,
                                 comment, ),
            method: :delete%>
    </li>
    <% end %>
  </ul>



</article>